<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jaljali.mapper.UserMapper">

    <resultMap id="user" type="com.jaljali.domain.User">
        <id     property="id"       column="id"/>
        <result property="email"    column="email"/>
        <result property="password" column="password"/>
        <result property="name"     column="name"/>
        <result property="phone"    column="phone"/>
        <association property="handler" resultMap="com.jaljali.mapper.HandlerMapper.Handler"/>
    </resultMap>

    <resultMap id="userDto" type="com.jaljali.domain.dto.UserDto">
        <id     property="id"       column="id"/>
        <result property="email"    column="email"/>
        <result property="password" column="password"/>
        <result property="name"     column="name"/>
        <result property="phone"    column="phone"/>
        <association property="handler" resultMap="com.jaljali.mapper.HandlerMapper.Handler"/>
    </resultMap>

    <insert id="create" parameterType="User">
        INSERT  INTO
            user
            (
                id,
                email,
                password,
                name,
                phone
            ) VALUES (
            #{id},
            #{email},
            #{password},
            #{name},
            #{phone}
        )
    </insert>

    <update id="update" parameterType="User">
        UPDATE  user
        SET     name      = #{name},
        phone     = #{phone}
        WHERE   id        = #{id}
    </update>

    <update id="updatePassword">
        UPDATE  user
        SET     password  = #{password}
        WHERE   id        = #{id}
    </update>

    <select id="read" resultMap="user">
        SELECT  id,
        email,
        password,
        name,
        phone
        FROM    user
        WHERE   id        = #{id}
    </select>
    <select id="readDto" resultMap="userDto">
    #         TODO : JOIN 걸고 서브쿼리
        SELECT  id,
        email,
        password,
        name,
        phone
        FROM    user
        WHERE   id        = #{id}
    </select>

    <select id="readEmail" parameterType="String">
        SELECT  email
        FROM    user
        WHERE   id        = #{id}
    </select>
</mapper>